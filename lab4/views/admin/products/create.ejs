<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <title>Створення товару</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Створення товару</h1>
    <nav>
        <a href="/admin/products">Назад до списку</a> |
        <a href="/admin">Панель адміністратора</a> |
        <a href="/">Головна</a>
    </nav>

    <div class="admin-panel">
        <form action="/admin/products" method="POST" class="form">
            <div class="form-group">
                <label for="name">Назва товару:</label>
                <input type="text" id="name" name="name" required>
            </div>

            <div class="form-group">
                <label for="description">Опис:</label>
                <textarea id="description" name="description" required></textarea>
            </div>

            <div class="form-group">
                <label for="price">Ціна:</label>
                <input type="number" id="price" name="price" step="0.01" min="0" required>
            </div>

            <div class="form-group">
                <label for="categoryId">Категорія:</label>
                <select id="categoryId" name="categoryId" required>
                    <option value="">Виберіть категорію</option>
                    <% categories.forEach(category => { %>
                        <optgroup label="<%= category.name %>">
                            <option value="<%= category.id %>"><%= category.name %></option>
                            <% if (category.children && category.children.length > 0) { %>
                                <% category.children.forEach(child => { %>
                                    <option value="<%= child.id %>">&nbsp;&nbsp;└─ <%= child.name %></option>
                                <% }); %>
                            <% } %>
                        </optgroup>
                    <% }); %>
                </select>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn">Створити</button>
                <a href="/admin/products" class="btn btn-secondary">Скасувати</a>
            </div>
        </form>
    </div>
</body>
</html> 